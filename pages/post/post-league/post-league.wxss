.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.audio{
  width: 300rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -150rpx;
  top: 175rpx;
  opacity: 0.6;
}

.leagueName{
  font-family: cursive;
  font-size: 50rpx;
  font-weight: bold;
}

.logo{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.logo image{
  height: 90rpx;
  width: 85rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 30rpx;
}

.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.circle-image{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-image image{
  width: 90rpx;
  height: 90rpx;
}

.share-img{
  margin-left: 30rpx;
}

.horizon{
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -50;
}

.content{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}

.hero{
  margin-top: 50rpx;
  margin-left: 40rpx;
  font-family: cursive;
  font-size: 50rpx;
  font-weight: bold;
}

.heros_wrap{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  text-align: center;
}

/* hero_iamges */
.h image{
  width: 32vw;
  height: 32vw;
  border-radius: 50%;
  justify-content: space-between;
}

.content_h{
  color: #666;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size: 30rpx;
}


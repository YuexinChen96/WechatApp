/* pages/index/index.wxss */
page{
  height: 100%;
  background-color: #b3d4db;
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar{
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
}

.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5px;
  text-align: center;
}
